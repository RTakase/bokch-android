<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_divider_height"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@drawable/bg_full_list_cell"
    >

    <RelativeLayout
        android:id="@+id/jacket_container"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        >
        <tv.bokch.widget.NetworkImageView
            android:id="@+id/jacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/jacket_container"
        android:layout_toLeftOf="@id/rating"
        />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="12sp"
        android:gravity="top|left"
        android:layout_below="@id/book_title"
        android:layout_alignLeft="@id/book_title"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>