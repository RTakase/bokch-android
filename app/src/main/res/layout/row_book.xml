<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_divider_height"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/bg_full_list_cell"
    >

    <tv.bokch.widget.NetworkImageView
        android:id="@+id/jacket"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical|left"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/jacket"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/jacket"
        android:layout_below="@id/title"
        />

    <TextView
        android:id="@+id/rating_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/jacket"
        android:layout_below="@id/author"
        />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/jacket"
        android:layout_below="@id/rating_average"
        />
</RelativeLayout>