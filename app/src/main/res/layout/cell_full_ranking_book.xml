<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/list_divider_height"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="8dp"
    android:background="@drawable/bg_full_list_cell"
    >

    <RelativeLayout
        android:id="@+id/jacket_container"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        >
        <tv.bokch.widget.CircleNetworkImageView
            android:id="@+id/jacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"
            app:radius="4dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/medal"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="invisible"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/jacket_container"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="#444444"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:layout_alignBottom="@id/medal"
        android:layout_toRightOf="@id/medal"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:textColor="#444444"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignLeft="@id/book_title"
        android:layout_below="@id/book_title"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:gravity="center_vertical|left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>