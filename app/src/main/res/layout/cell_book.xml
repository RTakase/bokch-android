<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_divider_height"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/bg_full_list_cell"
    >

    <RelativeLayout
        android:id="@+id/jacket_container"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        >
        <tv.bokch.widget.NetworkImageView
            android:id="@+id/jacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical|left"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/jacket_container"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/jacket_container"
        android:layout_below="@id/title"
        />

    <RatingBar
        android:id="@+id/rating_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:max="5"
        android:stepSize="0.01"
        android:isIndicator="true"
        android:layout_below="@id/author"
        android:layout_toRightOf="@id/jacket_container"
        style="?android:attr/ratingBarStyleIndicator"
        />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/jacket_container"
        android:layout_below="@id/rating_average"
        />
</RelativeLayout>