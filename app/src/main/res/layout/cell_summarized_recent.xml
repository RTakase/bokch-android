<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="72dp"
    android:layout_height="96dp"
    android:background="#00000000"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="-4dp"
    >

    <tv.bokch.widget.NetworkImageView
        android:id="@+id/jacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        />

    <tv.bokch.widget.CircleNetworkImageView
        android:id="@+id/user_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <tv.bokch.widget.FilteredTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_plate_text"
        android:textSize="10sp"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:background="@drawable/bg_title_plate"
        android:layout_alignParentBottom="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        />
</RelativeLayout>