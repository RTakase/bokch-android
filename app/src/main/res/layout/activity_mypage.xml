    <!--app:tabSelectedTextColor="#ffffff"-->
    <!--app:tabIndicatorColor="#ffffff"-->
    <!--android:background="#00000000"-->
    <!--/> -->
</LinearLayout>

</android.support.design.widget.AppBarLayout>

